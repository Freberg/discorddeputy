{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":separateMajorReleases",
    ":combinePatchMinorReleases"
  ],
  "enabledManagers": [
    "gradle",
    "gradle-wrapper",
    "github-actions",
    "kustomize"
  ],
  "packageRules": [
    {
      "description": "Group all Kotlin-related updates together",
      "groupName": "kotlin",
      "matchPackageNames": [
        "org.jetbrains.kotlin{/,}**"
      ]
    },
    {
      "description": "Separate PRs for Kustomize services",
      "matchManagers": [
        "kustomize"
      ],
      "matchFileNames": [
        "kubernetes/**"
      ],
      "labels": [
        "gitops",
        "no-release-notes"
      ],
      "commitMessagePrefix": "chore(gitops):"
    }
  ]
}

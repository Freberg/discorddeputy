{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":separateMajorReleases",
    ":combinePatchMinorReleases"
  ],
  "enabledManagers": [
    "gradle",
    "gradle-wrapper",
    "github-actions"
  ],
  "packageRules": [
    {
      "description": "Group all Kotlin-related updates together",
      "groupName": "kotlin",
      "matchPackageNames": [
        "org.jetbrains.kotlin{/,}**"
      ]
    }
  ]
}
